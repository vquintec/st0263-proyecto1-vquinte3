<% include header %>

<script>
  function deleteVideo(id) {
    url = "http://localhost:3000/delete-video/" + id;
    deleteRequest(url);
  }

  function deleteRequest(url) {
    $.ajax({
      url: url,
      type: 'DELETE',
      success: function(res) {
        console.log(res);
        alert(res);
        location.reload();
      },
      error: function(data){
        alert("fail " + data);

      }
    });
  }

</script>

